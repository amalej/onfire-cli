{
    "ts-node": {
        "esm": true
    },
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "lib": [
            "es2017",
            "es7",
            "es6",
            "dom"
        ],
        "allowJs": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "strictNullChecks": true
    },
    "lib": [
        "es2015"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "functions"
    ]
}